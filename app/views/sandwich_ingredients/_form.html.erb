<%= form_for @sandwich_ingredient, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :category, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :category, options_for_select(['Meat', 'Condiment', 'Veggie']) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ingredient, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ingredient, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sandwich_ingredients_path, :class => 'btn' %>
  </div>
<% end %>
