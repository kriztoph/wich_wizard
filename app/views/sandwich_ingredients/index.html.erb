<%- model_class = SandwichIngredient -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:id) %></th>
    <th><%= model_class.human_attribute_name(:category) %></th>
    <th><%= model_class.human_attribute_name(:ingredient) %></th>
    <th><%= model_class.human_attribute_name(:created_at) %></th>
    <th><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @sandwich_ingredients.each do |sandwich_ingredient| %>
    <tr>
      <td><%= link_to sandwich_ingredient.id, sandwich_ingredient_path(sandwich_ingredient) %></td>
      <td><%= sandwich_ingredient.category %></td>
      <td><%= sandwich_ingredient.ingredient %></td>
      <td><%=l sandwich_ingredient.created_at %></td>
      <td>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_sandwich_ingredient_path(sandwich_ingredient), :class => 'btn btn-mini' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    sandwich_ingredient_path(sandwich_ingredient),
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-mini btn-danger' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_sandwich_ingredient_path,
            :class => 'btn btn-primary' %>
